# ===========================================
# Polymarket Bot Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# Polygon Wallet (Required for live trading)
# ------------------------------------------
# Your Polygon wallet private key (with 0x prefix)
POLYGON_PRIVATE_KEY=

# Your Polygon wallet address
POLYGON_WALLET_ADDRESS=

# ------------------------------------------
# Database Configuration
# ------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/polybot

# Redis connection string
REDIS_URL=redis://localhost:6379

# ------------------------------------------
# Bot Configuration
# ------------------------------------------
# Mode: "paper" for simulation, "live" for real trading
MODE=paper

# Minimum profit percentage to execute (0.025 = 2.5%)
MIN_PROFIT_PCT=0.025

# Maximum position size per trade in USD
MAX_POSITION_USD=50

# Maximum daily loss before stopping (USD)
MAX_DAILY_LOSS=100

# Scan interval in milliseconds
SCAN_INTERVAL_MS=500

# ------------------------------------------
# Notifications (Optional)
# ------------------------------------------
# Discord webhook for alerts
DISCORD_WEBHOOK_URL=

# Telegram bot token and chat ID
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ------------------------------------------
# Logging
# ------------------------------------------
LOG_LEVEL=INFO
